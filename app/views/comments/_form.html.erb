<div class="well well-lg">
  <div class="panel panel-primary">
    <div class="panel-heading">
      Comment on this story
    </div>
    <%= form_for([@story, @story.comments.build]) do |f| %>
    <table class="table">
      <tr>
        <th class="info">Commenter Email</th>
      </tr>
      <tr>
        <td><%= f.text_field :commenter, placeholder: "Enter Your Email Here" %></td>
      </tr>
      <tr>
        <th class="info">Comments</th>
      </tr>
      <tr>
        <td><%= f.text_area :body, rows: "4", style: 'width:100%', placeholder: "Enter Your Comment Here" %></td>
      </tr>
    </table>
  </div>
  <%= f.submit class: "btn btn-primary btn-lg" %>
  <% end %>
</div>
