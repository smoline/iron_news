<div class="page-header">
  <h1 Listing><%= image_tag("IronYardLogo.png", :width => 100, :height => 100) %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tbody class="table-body">
      <%- @stories.each.with_index do |story, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td colspan="5"><a href="<%= story.url %>"><%= story.title %></a></td>
      </tr>
      <tr>
        <td></td>
        <td>Posted at <%= story.created_at %></td>
        <td><%= story.email %></td>
        <td>
          <%= link_to story do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_story_path(story) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
